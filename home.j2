{% from "macros.j2" import render_item %}

{% block style %}
  <link rel="stylesheet" href="{{ static_url }}ueno.css">
{% endblock %}

{% block body %}
  <div class="body">
    {% include "./_side.j2" %}
    <div class="main">
      <div class="inner main_mark">
    {% set subjects = query.latest_subjects(count=50) %}

    {# ===== Featured 文章优先显示（首页） ===== #}

    {# 先渲染置顶文章 #}
    {% for subject in subjects if subject.is_featured %}
      {{ render_item(site, subject) }}
    {% endfor %}

    {# 再渲染普通文章 #}
    {% for subject in subjects if not subject.is_featured %}
      {{ render_item(site, subject) }}
    {% endfor %}
        {% if subjects|count >= 10 %}
          {% set last = subjects|last %}
          <div class="home-more">
            <a href="{{ linkify(site.list_url) }}{{last.published_at.year}}/#item-{{last.id}}">ARCHIVE →</a>
          </div>
        {% endif %}
      </div>
    </div>
  </div>
  {% include "./_foot.j2" %}
{% endblock %}
