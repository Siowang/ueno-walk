{% block body %}
  <div class="body">
    {% include "./_side.j2" %}
    <div class="main">
      <div class="inner main_mark">
        
        {# 模仿 Aoyama：使用专门的置顶查询接口 #}
        {% set featured_posts = query.featured_subjects() %}
        {% for post in featured_posts %}
          <div class="sticky-item" style="border-bottom: 2px solid #000; margin-bottom: 20px;">
            <span style="font-size: 12px; background: #000; color: #fff; padding: 2px 5px;">置顶</span>
            <h2><a href="{{ post.url }}">{{ post.title }}</a></h2>
          </div>
        {% endfor %}

        {# 正常列表 #}
        {% set subjects = query.latest_subjects(count=20) %}
        {% for subject in subjects if not subject.featured %}
           <p><a href="{{ subject.url }}">{{ subject.title }}</a></p>
        {% endfor %}

      </div>
    </div>
  </div>
{% endblock %}
